            // Adjust index based on the number of rows in the table
            const table = document.getElementById("cartTable");
            const numRows = table.rows.length;
            const adjustedIndex = index >= numRows ? numRows - 1 : index;

            // Delete the corresponding row from the table
            table.deleteRow(adjustedIndex);
          } else {
            location.reload();
          }
        },
      });
    };
</script>

      
    
