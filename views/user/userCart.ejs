      <script>
        const incOrDecQuantity = (productId, quantity, index, operation) => {
          const price = parseInt(document.getElementById("price" + index).innerHTML);
          const subTotal = parseInt(document.getElementById("individualTotal" + index).innerHTML);
          const qty = parseInt(document.getElementById("quantity" + index).innerHTML);
          const size = document.getElementById("size" + index).innerText;
          let newQuantity = operation == "increment" ? 1 : -1;
          console.log("This is the price", price);
          console.log("This is subtotal", subTotal);
          console.log("This is newqty", newQuantity);
          console.log("This is size", size);
          console.log("THis is the operation", operation)

      
          // if (newQuantity < 1) {
          //   // Don't allow quantity to go below 1
          //   return;
          // }
      
          $.ajax({
            url: `/updateCartQuantity?productId=${productId}&quantity=${newQuantity}&operation=${operation}&size=${size}&qty=${qty}`,
            method: "PATCH",
            success: (response) => {
              console.log("This is response", response)
              if (response.status) {
                Toastify({
                  text: `Quantity Updated`,
                  duration: 3000,
                  gravity: "top",
                  position: "center",
                  stopOnFocus: true,
                  style: {
                    background: "green",
                  },
                }).showToast();

                // alert(response.total)
      
                document.getElementById("quantity" + index).innerHTML = parseInt(qty) + parseInt(response.quantity);
                
                document.getElementById("individualTotal" + index).innerHTML = subTotal + (price * (operation === "increment" ? 1 : -1));
                document.getElementById("totalAmountFinal").innerHTML = response.total;
                document.getElementById("totalSubTotal").innerHTML = response.total;

              } else {
                Toastify({
                  text: `Stock Limit Exceeded`,
                  duration: 3000,
                  gravity: "top",
                  position: "center",
                  stopOnFocus: true,
                  style: {
                    background: "red",
                  },
                }).showToast();
                // Rollback quantity change
                document.getElementById("quantity" + index).innerHTML = qty;
              }
            }
          });
        };
      </script>

